# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs.
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
indent_size = 2
# Set to false if you want to allow trailing spaces for line breaks
trim_trailing_whitespace = true
max_line_length = off

# Shell scripts
[*.sh]
indent_size = 4

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

# Dockerfile
[Dockerfile*]
indent_size = 4
