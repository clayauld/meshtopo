# Minimal Meshtopo Configuration
# This is the simplest possible configuration

mqtt:
    broker: "192.168.1.100"
    port: 1883
    username: "user"
    password: "pass"
    topic: "msh/US/2/json/+/+"

caltopo:
    connect_key: "YOUR_CONNECT_KEY_HERE"

# Optional: Internal MQTT broker
mqtt_broker:
    enabled: false
    port: 1883
    websocket_port: 9001
    users:
        - username: "meshtopo"
          password: "password"
          acl: "readwrite"

logging:
    level: "INFO"
