# Meshtopo Gateway Service Environment Configuration
# Copy this file to .env and customize the values

# GitHub Repository (for Docker image)
GITHUB_REPOSITORY=clayauld/meshtopo

# SSL Configuration
SSL_DOMAIN=yourdomain.com
SSL_EMAIL=your-email@example.com

# DNS Challenge Configuration (optional)
DNS_PROVIDER=
DNS_EMAIL=
DNS_API_TOKEN=
DNS_ZONE_API_TOKEN=

# MQTT Broker Configuration
MQTT_PORT=1883
MQTT_WS_PORT=9001

# MQTT Authentication (set to true to enable)
MQTT_AUTH_ENABLED=false
MQTT_ACL_ENABLED=false

# MQTT Volume Mounts (set to true to mount files)
MQTT_PASSWD_MOUNT=false
MQTT_ACL_MOUNT=false
